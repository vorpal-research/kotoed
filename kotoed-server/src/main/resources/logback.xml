<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%highlight(%d{yyyy-MM-dd'T'HH:mm:ss.SSS} %-5p [%t][%c] - %m%n)</pattern>
        </encoder>
    </appender>

    <appender name="logfile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- <file>/tmp/kotoed.log</file> -->
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} %-5p [%t][%c] - %m%n</pattern>
        </encoder>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/tmp/kotoed.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <logger name="org.jetbrains.research">
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="io.vertx.ext.web.handler" level="DEBUG">
        <appender-ref ref="stdout"/>
    </logger>

    <root level="TRACE">
        <appender-ref ref="logfile"/>
    </root>

</configuration>
