{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noErrorTruncation": true,
    "sourceMap": true,
    "target": "es2017",
    "alwaysStrict": true,
    "strict": true,
    "strictFunctionTypes": false, // TODO enable
    "skipLibCheck": true
  },
  "include": [
    "src/main/ts/**/*",
    "webpack.config.*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}